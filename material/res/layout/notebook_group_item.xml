<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dp"
    android:orientation="horizontal"
    android:descendantFocusability="blocksDescendants"
        >

    <TextView
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/textTitle"
        android:text="今天"
        android:textSize="@dimen/text_size21"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
            android:textColor="@color/main_blue"
            android:layout_marginLeft="20dip"/>
    <ImageButton
            android:layout_width="48dip"
            android:layout_height="48dip"
            android:src="@drawable/add_content_selector"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:background="@null"
            android:id="@+id/gbutton" android:layout_alignParentRight="true" android:layout_marginRight="10dip"
            android:visibility="visible" android:scaleType="center"/>

</RelativeLayout>
