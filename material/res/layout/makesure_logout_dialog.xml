<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/semi_transparent"
              android:gravity="center">
    <RelativeLayout
            android:layout_width="330dip"
            android:layout_height="wrap_content"
            >
        <LinearLayout android:orientation="vertical" android:id="@+id/ll_add_name_dialog" android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:background="@color/white"
                >
            <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/space_15" android:text="提示" android:textSize="@dimen/text_size21" android:textColor="@color/main_blue"/>
            <View android:layout_width="fill_parent" android:layout_height="2dip" android:background="@drawable/title_part_line"></View>
            <TextView android:id="@+id/tv_notic_content" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_margin="@dimen/edit_hight" android:text="是否确认退出？" android:textSize="@dimen/text_size18" android:textColor="@color/gray"
                      android:layout_gravity="center_horizontal"/>
        </LinearLayout>
        <LinearLayout android:id="@+id/ll_opt" android:orientation="horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content"
                      android:layout_below="@+id/ll_add_name_dialog">
            <Button android:id="@+id/btn_confirm" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:background="@drawable/btn_notice_selector" android:text="确认" android:textSize="@dimen/text_size18"  android:textColor="@color/gray"/>
            <Button android:id="@+id/btn_cancle" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:background="@drawable/btn_notice_selector" android:text="取消" android:textSize="@dimen/text_size18"  android:textColor="@color/gray"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>