<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@drawable/list_line_bg_selector">
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/normal_space"
            android:layout_marginBottom="@dimen/normal_space"
            android:layout_marginLeft="@dimen/space_15"
            android:layout_marginRight="@dimen/space_15"
            >
        <com.jhlc.material.view.RoundImageView
                android:id="@+id/round_head_image"
                android:layout_width="60dp"
                android:layout_height="60dp"
                imagecontrol:border_outside_color="#f0f0f0"
                imagecontrol:border_thickness="3dp"
                android:background="@drawable/defult_user_headimg"/>
        <TextView android:id="@+id/tv_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content"
                  android:textColor="@color/black"
                  android:textSize="@dimen/text_size14"
                  android:layout_centerVertical="true"
                  android:layout_gravity="center_horizontal"
                  android:layout_toRightOf="@+id/round_head_image"
                  android:layout_marginLeft="@dimen/normal_space"/>

        <TextView android:id="@+id/tv_user_job"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="傅旭东"
                  android:textColor="@color/gray"
                  android:textSize="@dimen/text_size14"
                  android:ellipsize="end" android:singleLine="true"
                  android:maxWidth="90dp"
                  android:layout_centerVertical="true"
                  android:layout_gravity="center_horizontal"
                  android:layout_alignParentRight="true"/>

        </RelativeLayout>


</LinearLayout>