<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:background="#ffffff">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/space_7">
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:padding="@dimen/space_7"
                    android:textSize="@dimen/text_size18"
                    android:textColor="@color/black"
                    android:text="年"/>

            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="@dimen/space_7"
                    android:gravity="center"
                    android:textSize="@dimen/text_size18"
                    android:textColor="@color/black"
                    android:text="月"/>
            <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/space_7"
                    android:textSize="@dimen/text_size18"
                    android:textColor="@color/black"
                    android:text="日"/>

        </LinearLayout>
        <View android:layout_width="fill_parent"
              android:layout_height="1dip"
              android:background="@color/main_bg"></View>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <com.jhlc.material.view.wheelview.DateWheel
                    android:id="@+id/yaer_wheel"
                    android:layout_weight="2"
                    android:layout_width="0dp"
                    android:layout_height="160dp"/>

            <com.jhlc.material.view.wheelview.DateWheel
                    android:id="@+id/month_wheel"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"/>


            <com.jhlc.material.view.wheelview.DateWheel
                    android:id="@+id/day_wheel"
                    android:layout_width="0dp"
                    android:layout_height="160dp"
                    android:layout_weight="1"/>

        </LinearLayout>

        <View android:layout_width="fill_parent" android:layout_height="1dip" android:background="@color/main_bg"></View>

        <TextView
                android:id="@+id/time_submit"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btn_hight38"
                android:text="确定"
                android:layout_marginTop="@dimen/normal_space"
                android:textColor="@drawable/text_blue_red_selector"
                android:textSize="@dimen/text_size21"
                android:gravity="center" />


        <View android:layout_width="fill_parent" android:layout_height="1dip" android:background="@color/main_bg"></View>

        <TextView
                android:id="@+id/time_cancle"
                android:layout_width="fill_parent"
                android:layout_height="@dimen/btn_hight38"
                android:text="取消"
                android:layout_marginTop="@dimen/normal_space"
                android:textColor="@drawable/text_blue_red_selector"
                android:textSize="@dimen/text_size21"
                android:gravity="center"
                android:layout_marginBottom="@dimen/space_7"/>


    </LinearLayout>


</RelativeLayout>