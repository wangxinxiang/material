<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/linegray">
    <TextView
            android:id="@+id/office_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/text_size14"
            android:layout_marginLeft="@dimen/space_20"
            android:padding="@dimen/space_7"
            android:textColor="@color/black" android:layout_centerVertical="true"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/img_expand"
            android:layout_alignBottom="@id/office_name"
            android:layout_alignParentRight="true"
            android:background="@color/transparency" android:padding="@dimen/space_7"
            android:layout_marginRight="@dimen/space_20" android:layout_centerVertical="true"/>
    <TextView android:layout_width="fill_parent" android:layout_height="1dp" android:id="@+id/tv_line"
              android:background="@color/white" android:layout_alignParentBottom="true"
              android:padding="@dimen/space_7"
            />
</RelativeLayout>