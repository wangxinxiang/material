<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="@dimen/space_12"
              android:background="@drawable/list_bg_selector">
    <com.jhlc.material.view.RoundImageView
            android:id="@+id/round_head_image_log"
            android:layout_width="60dp"
            android:layout_height="60dp"
            imagecontrol:border_outside_color="#f0f0f0"
            imagecontrol:border_thickness="3dp"
            android:background="@drawable/defult_user_headimg"/>
    <TextView android:id="@+id/tv_log_child_user_name"
              android:layout_width="wrap_content"
              android:layout_height="fill_parent"
              android:textColor="@color/black"
              android:textSize="@dimen/text_size14"
              android:text="用户名"
              android:gravity="center"
              android:layout_marginLeft="@dimen/normal_space"/>
    <TextView android:id="@+id/tv_log_child_user_job"
              android:layout_width="0dp"
              android:layout_weight="1"
              android:layout_height="fill_parent"
              android:gravity="center|right"
              android:textColor="@color/gray"
              android:textSize="@dimen/text_size14"
              android:layout_marginLeft="@dimen/space_60"
              android:layout_gravity="center_horizontal"
            />

</LinearLayout>