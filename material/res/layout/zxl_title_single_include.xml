              android:layout_width="match_parent"
              android:layout_height="wrap_content"
                 android:background="@color/white">
        <TextView android:layout_width="match_parent"
                  android:layout_height="wrap_content"
                  android:id="@+id/tv_title_single"
                  android:text="@string/tab_task"
