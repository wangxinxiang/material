<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:imagecontrol="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/space_15"
                android:paddingRight="@dimen/space_15"
                android:descendantFocusability="blocksDescendants"
                android:background="@drawable/list_line_bg_selector">

    <com.jhlc.material.view.RoundImageView
            android:id="@+id/round_head_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            imagecontrol:border_outside_color="#f0f0f0"
            imagecontrol:border_thickness="3dp"
            android:background="@drawable/defult_user_headimg"
            android:layout_alignParentBottom="false"
            android:layout_centerVertical="true"
            android:layout_marginTop="@dimen/normal_space"
            android:layout_marginBottom="@dimen/normal_space"/>


    <ImageView android:id="@+id/img_new_msg" android:layout_width="wrap_content" android:layout_height="wrap_content"
               android:background="@drawable/red_dot"
               android:layout_marginLeft="42dip" android:layout_alignTop="@+id/round_head_image"
               android:visibility="gone"/>

    <ImageButton android:id="@+id/ibtn_delete_users" android:layout_width="wrap_content"
                 android:layout_height="wrap_content" android:background="@drawable/delete_my_upyser_selector"
                 android:layout_marginLeft="42dip" android:visibility="gone"/>

    <TextView android:id="@+id/tv_user_name" android:layout_width="wrap_content" android:layout_height="wrap_content"
              android:text="傅旭东"
              android:layout_marginTop="@dimen/normal_space" android:textColor="@color/gray"
              android:textSize="@dimen/text_size14"
              android:layout_centerVertical="true" android:layout_gravity="center_horizontal"
              android:layout_toRightOf="@+id/round_head_image"
              android:layout_marginLeft="@dimen/normal_space"/>

    <LinearLayout android:id="@+id/ll_payment_info" android:orientation="horizontal" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true" android:layout_centerVertical="true" android:visibility="gone">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerInParent="true">
            <RelativeLayout android:id="@+id/rl_all_money" android:layout_width="wrap_content"
                            android:layout_height="wrap_content">
                <TextView android:id="@+id/tv_all_money" android:layout_width="wrap_content"
                          android:layout_height="wrap_content" android:text="1000" android:textColor="@color/gray"
                          android:textSize="@dimen/text_size18"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="元"
                          android:textColor="@color/gray" android:textSize="@dimen/text_size12"
                          android:layout_toRightOf="@+id/tv_all_money" android:layout_centerVertical="true"/>
            </RelativeLayout>
            <TextView android:id="@+id/tv_payment_unit" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="剩余" android:textColor="@color/gray"
                      android:textSize="@dimen/text_size14"
                      android:layout_centerInParent="true" android:layout_below="@+id/rl_all_money"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout android:id="@+id/ll_detail_info" android:orientation="horizontal" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true" android:layout_centerVertical="true"
                  android:visibility="visible">
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerInParent="true"
                android:layout_marginRight="5dp">
            <TextView android:id="@+id/tv_apply_num" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="0" android:textColor="@color/main_red"
                      android:textSize="@dimen/text_size21"
                      android:layout_centerHorizontal="true"/>
            <TextView android:id="@+id/tv_apply" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="申请完成" android:textColor="@color/main_red"
                      android:textSize="@dimen/text_size12"
                      android:layout_centerInParent="true" android:layout_below="@+id/tv_apply_num"/>
        </RelativeLayout>
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:id="@+id/tv_onexecute_num" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="12" android:textColor="@color/gray"
                      android:textSize="@dimen/text_size21"
                      android:layout_centerHorizontal="true"/>
            <TextView android:id="@+id/tv_onexecute" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="执行中" android:textColor="@color/gray"
                      android:textSize="@dimen/text_size12"
                      android:layout_centerInParent="true" android:layout_below="@+id/tv_onexecute_num"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content" android:layout_marginLeft="@dimen/normal_space"
                android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:id="@+id/tv_overtime_num" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="0" android:textColor="@color/gray"
                      android:textSize="@dimen/text_size21"
                      android:layout_centerHorizontal="true"/>
            <TextView android:id="@+id/tv_overtime" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="超时" android:textColor="@color/gray"
                      android:textSize="@dimen/text_size12"
                      android:layout_centerInParent="true" android:layout_below="@+id/tv_overtime_num"/>
        </RelativeLayout>

        <RelativeLayout
                android:layout_width="wrap_content" android:layout_marginLeft="@dimen/normal_space"
                android:layout_height="wrap_content" android:layout_centerInParent="true">
            <TextView android:id="@+id/tv_noreport_num" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="8" android:textColor="@color/gray"
                      android:textSize="@dimen/text_size21"
                      android:layout_centerHorizontal="true"/>
            <TextView android:id="@+id/tv_noreport" android:layout_width="wrap_content"
                      android:layout_height="wrap_content" android:text="日报" android:textColor="@color/gray"
                      android:textSize="@dimen/text_size12"
                      android:layout_centerInParent="true" android:layout_below="@+id/tv_noreport_num"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout android:id="@+id/ll_inventation_info" android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true" android:layout_centerVertical="true"
                  android:visibility="visible"
                  android:orientation="horizontal" android:gravity="center">
        <TextView android:id="@+id/invent_accept_msg" android:layout_width="wrap_content"
                  android:layout_height="wrap_content" android:text="请求添加你为下属"
                  android:textColor="@color/gray" android:textSize="@dimen/text_size14"
                  android:layout_centerVertical="true" android:layout_gravity="center_vertical"

                  android:layout_toLeftOf="@+id/ibtn_invent_accept"
                  android:visibility="visible"
                />
        <Button android:id="@+id/ibtn_invent_accept" android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" 接受 "
                android:textColor="@color/white" android:background="@drawable/small_btn_blue_selector"
                android:layout_alignParentRight="true" android:layout_marginRight="10dip"
                android:layout_centerVertical="true" android:visibility="visible"/>

    </LinearLayout>

</RelativeLayout>